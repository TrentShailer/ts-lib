{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "required": ["array"],
  "properties": {
    "array": {
      "type": "array",
      "minItems": 3,
      "items": {
        "type": "object",
        "required": ["text", "flag", "number"],
        "properties": {
          "text": {
            "description": "The text.",
            "maxLength": 20,
            "type": "string"
          },
          "flag": {
            "description": "The flag.",
            "default": "false",
            "type": "boolean"
          },
          "number": {
            "description": "The number.",
            "type": "number",
            "minimum": 0
          }
        }
      }
    }
  }
}
