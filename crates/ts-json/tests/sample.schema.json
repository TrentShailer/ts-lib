{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "required": ["locations"],
  "properties": {
    "locations": {
      "type": "array",
      "minItems": 3,
      "items": {
        "type": "object",
        "required": ["name", "coordinates"],
        "properties": {
          "name": {
            "description": "The name of the location.",
            "type": "string"
          },
          "isCool": {
            "description": "Whether the location is cool.",
            "default": "false",
            "type": "boolean"
          },
          "coordinates": {
            "description": "The coordinates for the location.",
            "type": "array",
            "maxItems": 2,
            "minItems": 2,
            "items": {
              "type": "number",
              "description": "A coordinate, latitude or longitude."
            }
          }
        }
      }
    }
  }
}
